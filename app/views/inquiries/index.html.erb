<p id="notice"><%= notice %></p>

<h1>Inquiries</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Message content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inquiries.each do |inquiry| %>
      <tr>
        <td><%= inquiry.subject %></td>
        <td><%= inquiry.message_content %></td>
        <td><button><%= link_to 'Show', inquiry %></td></tr></button>
    <%if current_user && current_user.role =="House Hunter" %>
        <td><button><%= link_to 'Edit', edit_inquiry_path(inquiry) %></td></button>
      <%end %>
        <td><button><%= button_to 'Destroy', inquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td></button>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


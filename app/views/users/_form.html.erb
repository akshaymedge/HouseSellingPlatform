<%= form_for @user do |form| %>
  <% if @user.errors.any? %>
    <h2>Form is invalid</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, id: :user_email, :placeholder => 'Email', class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name, :placeholder => 'Name', class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password, :placeholder => 'Password (minimum 6 characters)', class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :confirm_password %>
    <%= form.password_field :password_confirmation, id: :user_password, :placeholder => 'Confirm Password (minimum 6 characters)', class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :role %>
    <%= form.select :role, User::ROLE_LIST, id: :user_role, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :user_phone %>
  </div>

  <div class="field">
    <%= form.label :contactmethod %>
    <%= form.select :contactmethod, User::CONTACT_METHOD, id: :user_contactmethod %>
  </div>

  <!--% if current_user && current_user.role == "Realtor" %-->
    <div class="field">
      <%= form.label :company_id %>
      <%= form.select :company_id, options_for_select(Company.all.map {|c| [c.name, c.id] if c.name != "none"}), id: :company_id %>
      Choose Real Estate Company if you are a realtor
    </div>
  <!--%end%-->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
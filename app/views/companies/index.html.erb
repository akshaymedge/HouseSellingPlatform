<p id="notice"><%= notice %></p>

<h3>Real Estate Companies</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Address</th>
      <th>Size</th>
      <th>Founded</th>
      <th>Revenue</th>
      <th>Synopsis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.website %></td>
        <td><%= company.address %></td>
        <td><%= company.size %></td>
        <td><%= company.founded %></td>
        <td><%= company.revenue %></td>
        <td><%= company.synopsis %></td>

        <% if current_user && ((current_user.role=="Realtor" && current_user.company_id == company.id) || current_user.role=="Admin") %>
          <td><button><%= link_to 'Show', company %></button></td>
          <td><button><%= link_to 'Edit', edit_company_path(company) %></button></td>
          <td><button><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
          <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New Company', new_company_path %></button>
<button><%= link_to 'Back', current_user %></button>